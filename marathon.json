{
    "id": "/mesosphere/cd-demo-node-app",
    "instances": 2,
    "cpus": 1,
    "mem": 192,
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "$registry/demo-frontend-node:$tag",
            "network": "BRIDGE",
            "portMappings": [
                {
                    "servicePort": 0,
                    "containerPort": 8080,
                    "hostPort": 0,
                    "protocol": "tcp"
                }
            ]
        }
    },
    "healthChecks": [
        {
            "gracePeriodSeconds": 120,
            "intervalSeconds": 30,
            "maxConsecutiveFailures": 3,
            "path": "/",
            "portIndex": 0,
            "protocol": "HTTP",
            "timeoutSeconds": 5
        }
    ],
    "constraints": [
        [ "hostname", "GROUP_BY" ]
    ]
}